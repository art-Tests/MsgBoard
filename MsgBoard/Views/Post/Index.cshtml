@using MsgBoard.Models.Dto
@using PagedList.Mvc;
@using PagedList;
@model IEnumerable<MsgBoard.ViewModel.Post.PostIndexViewModel>

@{
    ViewBag.Title = "文章列表";
}
<br />
@{
    if (SignInUser.Auth)
    {
        <div class="text-right">
            @Html.ActionLink("New Post", "Create", "Post", null, new { @class = "btn btn-sm btn-primary" })
        </div>
    }
}
<br />
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-2">
            <img src="@Url.Content(item.Author.Pic)" height="100" />
            <br />
            @Html.DisplayFor(modelItem => item.Author.Name)
        </div>

        <div class="col-md-10">
            <pre style="white-space: pre-wrap">@item.Content</pre>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.ChineseTime)
        </div>
        <div class="col-md-10 text-right">
            <div class="text-muted">
                @{
                    if (SignInUser.Auth)
                    {
                        if (SignInUser.User.IsAdmin || SignInUser.User.Id == item.Author.Id)
                        {
                            <div style="display: inline;">
                                @Html.ActionLink("Edit", "Update", "Post", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })
                            </div>
                        }
                        <div style="display: inline;">
                            @Html.ActionLink("Reply", "Reply", "Post", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                        </div>
                        if (SignInUser.User.IsAdmin)
                        {
                            <div style="display: inline;">
                                <a href="javascript:;" class="btn btn-danger btn-sm delete-link">Delete</a>
                                <a href="javascript:;" class="btn btn-sm btn-danger delete-confirm" data-id="@item.Id" style="display:none">確認刪除？</a>
                            </div>
                        }
                    }
                }

                Edit By @item.Author.Name @@ @item.UpdateTime.ToString("t")
            </div>
        </div>
    </div>
    <hr />
}
<div class="text-center">
    @Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))
</div>

@section scripts
{
    <script src="~/js/Post/Index.js?@Guid.NewGuid()"></script>
}

@section memberArea
{
    @Html.Partial("_MemberArea")
}